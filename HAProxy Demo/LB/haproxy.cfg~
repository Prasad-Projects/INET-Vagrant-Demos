global
	log 127.0.0.1 local0 info	
	log 127.0.0.1 local0 notice        
	maxconn 4096
        user haproxy
        group haproxy
        daemon
 
defaults
        log     global
        mode    http
        option  httplog
        option  dontlognull
        retries 3
        option  redispatch
        maxconn 2000
        contimeout      5000
        clitimeout      50000
        srvtimeout      50000
 
listen appname 0.0.0.0:80
        mode    http
        stats   enable
        stats   auth us3r:passw0rd
        balance leastconn
        option httpchk HEAD / HTTP/1.0
        option forwardfor
        cookie LSW_WEB insert
        option httpclose
        server web01 192.168.1.11:80/gardenwalkthrough1 cookie LSW_WEB01 check
        server web02 192.168.1.12:80/gardenwalkthrough cookie LSW_WEB02 check
	server web03 192.168.1.13:80 cookie LSW_WEB03 check

